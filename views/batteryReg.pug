  title Battery Section
nav.navbar.navbar-expand-lg.navbar-light.navbar-laravel
  .container
    a.navbar-brand(href='#') Battery Registration
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link(href='/login') Logout
        li.nav-item
          a.nav-link(href='#')
main.my-form
  .cotainer
    .row.justify-content-center
      .col-md-8
        .card
          .card-header
          .card-body
            form(name='my-form' onsubmit='return validform()' action='/battery' method='POST')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='batterysize') Battery Size
                .col-md-6
                  input#batterysize.form-control(type='text' name='batterysize')
                  span#batterySize
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='date') Date
                .col-md-6
                  input#date.form-control(type='date' name='date')
                  span#date
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='amount') Amount
                .col-md-6
                  input#amount.form-control(type='text' name='amount')
                  span#amount
              .col-md-6.offset-md-4
                button.btn.btn-primary(type='submit')
                  | Submit
