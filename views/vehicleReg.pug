  title  Parking Section 
nav.navbar.navbar-expand-lg.navbar-light.navbar-laravel
  .container
    a.navbar-brand(href='#') Manager Parking Section
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link(href='/login') Logout
        li.nav-item
          a.nav-link(href='#')
main.my-form
  .cotainer
    .row.justify-content-center
      .col-md-8
        .card
          .card-header
          .card-body
            form(name='my-form' onsubmit='return validform()' action='/parking' method='POST')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='vehicleType') Vehicle Type
                .col-sm-6
                    select#vehicleType.form-control(name='vehicletype' autofocus='' )
                      option(value='Default' selected='') Click to Select Type of Vehicle
                      option(value='trucks') Truck
                      option(value='PersonalCars') Personal Car
                      option(value='taxi') Taxi
                      option(value='costers') Coaster
                      option(value='bodas') Boda-Boda
                    span#vehicleTypeError 
              
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='numberPlate') Number Plate
                .col-md-6
                  input#numberPlate.form-control(type='text' name='numberplate' )
                  span#plateError
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='model') Model
                .col-md-6
                  input#model.form-control(type='text' name='model' )
                  span#modelError 
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='driverName') Driver Name
                .col-md-6
                  input#driverName.form-control(type='text' name='drivername' )
                  span#driverNameError 
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='phoneNumber') Phone Number
                .col-md-6
                  input#phoneNumber.form-control(type='phoneNumber' name='phonenumber' )
                  span#phonenumberError
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='date') Date
                .col-md-6
                  input#date.form-control(type ='date' name='date' )
                  span#dateError 
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='nid_number')
                  abbr(title='entryTime')
                  | Entry Time
                .col-md-6
                  input#entryTime.form-control(type='time' name='entrytime' )
                  span#timeError
              .col-md-6.offset-md-4
                button.btn.btn-primary(type='submit')
                  | Submit
