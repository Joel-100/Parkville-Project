  title  Car Tyre Clinic Section 
nav.navbar.navbar-expand-lg.navbar-light.navbar-laravel
  .container
    a.navbar-brand(href='#') Tyre Clinic
    a.navbar-brand(href='/dashBoard') Dashboard  
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link(href='#')
        li.nav-item
          a.nav-link(href='/login') Logout 
main.my-form
  .cotainer
    .row.justify-content-center
      .col-md-8
        .card
          .card-header
          .card-body
            form(name='my-form' onsubmit='return validform()' action='/cartyremodel' method='POST')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='firstName') Tyre Make
                .col-sm-6
                  select#tyremake.form-control(name='tyremake' autofocus='' )
                    option(value='Default' selected='') Select Type of Tyre
                    option(value='pirelli') Pirelli
                    option(value='firestone') Firestone
                    option(value='hankook') Hankook
                    option(value='michelin') Michelin
                    option(value='goodyear') Good Year
                  span#tyreMakeError 

              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='tyreSize' ) Tyre Size
                .col-md-6
                  input#tyresize.form-control(type='text' name='tyresize' )
                  span#tyreSizeError
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='tyreamount') Tyre Amount 
                .col-md-6
                  input#tyreamount.form-control(type='text' name='tyreamount' )
                  span#tyreAmountError
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='carModel') Car Model
                .col-md-6
                  input#carmodel.form-control(type='text' name='carmodel' )
                  span#carModelError
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='firstName') Tyre Services
                .col-sm-6
                  select#tyreservices.form-control(name='tyreservices' autofocus='' )
                    option(value='Default' selected='') Select Type of Service
                    option(value='tyrepressure') Tyre Pressure
                    option(value='tyrepuncture') Tyre Puncture
                    option(value='valves') Valves
                    option(value='') null
                  span#tyreServicesError 
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='firstName') Tyre Services Fees
                .col-sm-6
                  select.form-control(name='tyreservicefees' autofocus='')
                    option(value='Default' selected='') Select Service Fee
                    option(value='500') 500
                    option(value='5000') 5,000
                    option(value='5000') 5,000
                    option(value='') null
                  span#tyreServiceFeesError 
              .col-md-6.offset-md-4
                button.btn.btn-primary(type='submit')
                  | Submit
script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
